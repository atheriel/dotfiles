# ===============================================
# Git Colour Configuration
# ===============================================

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "status"]
	added = green
	changed = yellow
	untracked = red
	branch = magenta

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = magenta

[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green
	whitespace = white reverse
